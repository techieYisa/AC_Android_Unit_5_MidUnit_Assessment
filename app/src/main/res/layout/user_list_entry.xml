<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_list_entry_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/text_margin">

    <ImageView
        android:id="@+id/user_list_entry_thumbnail"
        android:layout_width="@dimen/thumbnail_size"
        android:layout_height="@dimen/thumbnail_size"
        android:layout_marginBottom="@dimen/text_margin"
        android:contentDescription="@string/user_image_desc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/user_list_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/name_size_in_list" />
</LinearLayout>
